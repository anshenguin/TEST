<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinitoapps.punjabgovttest.AddJobSecondActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="18dp"
        android:id="@+id/textviewcourse"
        android:text="Course"/>

    <Spinner
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/coursespinner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:spinnerMode="dialog"
        app:layout_constraintTop_toBottomOf="@id/textviewcourse"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/coursespinner"
        android:layout_margin="18dp"
        android:id="@+id/textviewfield"
        android:text="Field"/>

    <Spinner
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/fieldspinner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textviewfield"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:spinnerMode="dialog"

        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fieldspinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/minperc"
        android:maxLines="1"
        android:padding="12dp"
        android:hint="Minimum Percentage"
        android:maxHeight="32sp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corners"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/minperc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/sal"
        android:maxLines="1"
        android:padding="12dp"
        android:hint="Salary Offered Per Month"
        android:maxHeight="32sp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corners"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="SUBMIT"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
