<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:scrollbars="none"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.kinitoapps.punjabgovttest.DosAndDontsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="Do's"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Dress appropriately. Extremes in fashion or very casual clothes should generally be avoided. Look neat and clean."/>

    <TextView
        android:layout_width="match_parent"
        android:text="• Be punctual. Make sure that you are 10 minutes early."
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Bring a copy of all relevant documents, so you can refer to them if necessary."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Be Confident. Remember that you applied for the position because you thought that you could do it."
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Be Confident. Remember that you applied for the position because you thought that you could do it."/>

    <TextView
        android:layout_width="match_parent"
        android:text="Don'ts"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Don't dress too casually or look untidy."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Don't interrupt the interviewer before they have finished asking you a question and never finish their sentences for them.."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Don't talk about salary, holidays or bonuses unless they bring them up."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="• Never criticize any previous employers, supervisors, or co-workers during a job interview."/>


    </LinearLayout>
    </ScrollView>
