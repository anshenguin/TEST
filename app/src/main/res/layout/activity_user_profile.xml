<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinitoapps.punjabgovttest.UserProfileActivity">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
        android:layout_width="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/dp"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_margin="16dp"
        android:layout_height="160dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:id="@+id/change_profile_pic"
        android:gravity="center"
        android:padding="8dp"
        android:text="Change Profile Photo"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cityspinnereditprofile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/change_password"
            android:gravity="center"
            android:padding="8dp"
            android:text="Change Password"
            />

    <EditText
        app:layout_constraintTop_toBottomOf="@id/change_profile_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rounded_corners"
        android:padding="12dp"
        android:id="@+id/full_name_edittext"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:hint="Full Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/full_name_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rounded_corners"
        android:padding="12dp"
        android:id="@+id/phone_number_edittext"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:maxLength="10"
        android:hint="Phone Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textvieweducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="City"
        app:layout_constraintTop_toBottomOf="@id/phone_number_edittext" />

    <Spinner
        android:id="@+id/cityspinnereditprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textvieweducation" />

    <TextView
        android:id="@+id/emailtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/change_password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="abc@example.com"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:id="@+id/emaileditprofile"
        app:layout_constraintTop_toBottomOf="@id/emailtv"/>

    <TextView
        android:id="@+id/edudetailstv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Educational Details"
        app:layout_constraintTop_toBottomOf="@id/emaileditprofile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Degree Name (Field Name)"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:id="@+id/degree"
        app:layout_constraintTop_toBottomOf="@id/edudetailstv"/>

        <TextView
            android:id="@+id/percentagetextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Percentage"
            app:layout_constraintTop_toBottomOf="@id/degree" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="XX%"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:id="@+id/percentageeditprofile"
            app:layout_constraintTop_toBottomOf="@id/percentagetextview"/>


        <Button
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/percentageeditprofile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/save_changes"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:text="Save Changes"/>
    </android.support.constraint.ConstraintLayout>

</ScrollView>
