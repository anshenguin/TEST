<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.kinitoapps.punjabgovttest.LauncherActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ghar_ghar_rozgar"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:id="@+id/banner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:id="@+id/lin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Sign In"
                android:textColor="#4E4E4E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/giver"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="#FF921B ">

                    <ImageView
                        android:id="@+id/icon_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_usher_man_with_tie" />


                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="Employers"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/seeker"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="#00AFF0">

                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_find_in_page_black_24dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="Job Seekers"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/seeker_options"
            app:layout_constraintTop_toBottomOf="@id/lin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/welcome"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:layout_margin="12dp"
                android:textSize="18sp"
                android:text="Welcome, Name Here"
                android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/view_profile"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#FF921B"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_person_outline_black_24dp"
                    android:id="@+id/imageView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="14dp"
                    android:textSize="16sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text="View Profile" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/dos_and_donts"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/view_jobs"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#FF4E4E"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_warning_black_24dp"
                        android:id="@+id/imageView1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="14dp"
                        android:textSize="16sp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="DOs and DONTs in an Interview" />

                </LinearLayout>

            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/view_jobs"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/view_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#00AFF0"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_find_in_page_black_24dp"
                    android:id="@+id/imageView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="14dp"
                    android:textSize="16sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text="View Jobs" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/jobcalendar"
            app:layout_constraintTop_toBottomOf="@id/dos_and_donts"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F17EA5"
            android:layout_height="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_date_range_black_24dp"
                android:id="@+id/imageView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="14dp"
                android:textSize="16sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:text="Job Calendar" />

        </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/logout"
            app:layout_constraintTop_toBottomOf="@id/jobcalendar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#6C5BC3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_power_settings_new_black_24dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="14dp"
                    android:textSize="16sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text="Sign Out" />

            </LinearLayout>

        </RelativeLayout>

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/employer_options"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/lin"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/note"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="NOTE: We recommend the use of Official Ghar Ghar Rozgar website for company profiles."/>
            <TextView
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/welcomecompany"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note"
                android:gravity="center"
                android:layout_margin="12dp"
                android:textSize="18sp"
                android:text="Welcome, Name Here"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/welcomecompany"
                android:id="@+id/view_profile_comp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#FF921B"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_usher_man_with_tie"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="14dp"
                        android:textSize="16sp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="View Company Profile" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/post_job"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/view_profile_comp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#00AFF0"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_add_circle_black_24dp"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="14dp"
                        android:textSize="16sp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="Add a New Job" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/logoutcomp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/post_job"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#6C5BC3"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_power_settings_new_black_24dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="14dp"
                        android:textSize="16sp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="Sign Out" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
